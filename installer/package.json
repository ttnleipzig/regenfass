{
  "name": "@ttnleipzig/regenfass-installer",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "prebuild": "npm run docs:components && npm run playground:registry",
    "preview": "vite preview",
    "docs:components": "tsx scripts/generate-components-doc.ts",
    "docs:components:watch": "tsx scripts/generate-components-doc.ts --watch",
    "playground:registry": "tsx scripts/generate-playground-registry.ts",
    "playground:registry:watch": "tsx scripts/generate-playground-registry.ts --watch",
    "lint": "pnpm lint:ts && pnpm lint:md",
    "lint:fix": "pnpm lint:md:fix",
    "lint:ts": "tsc --noEmit",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"!node_modules\"",
    "lint:md:fix": "markdownlint-cli2 --fix \"**/*.md\" \"!node_modules\"",
    "prepare": "husky",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@kobalte/core": "^0.13.11",
    "@solidjs/router": "^0.15.3",
    "@statelyai/inspect": "^0.4.0",
    "@tabler/icons-solidjs": "^3.34.1",
    "@xstate/solid": "^2.0.0",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "esptool-js": "^0.5.7",
    "jszip": "^3.10.1",
    "lucide-solid": "^0.539.0",
    "solid-icons": "^1.1.0",
    "solid-js": "^1.9.9",
    "tailwind-merge": "^3.3.1",
    "tiny-node-eventemitter": "^1.0.6",
    "xstate": "^5.21.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@playwright/test": "^1.55.0",
    "@solidjs/testing-library": "^0.8.10",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@types/crypto-js": "^4.2.2",
    "@types/dom-serial": "^1.0.6",
    "@types/node": "^24.2.1",
    "@types/prismjs": "^1.26.5",
    "@types/w3c-web-serial": "^1.0.8",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "autoprefixer": "^10.4.21",
    "chokidar": "^4.0.3",
    "crypto-js": "^4.2.0",
    "fast-glob": "^3.3.3",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.2.4",
    "markdownlint-cli2": "^0.18.1",
    "postcss": "^8.5.6",
    "prismjs": "^1.30.0",
    "tailwindcss": "^3.4.17",
    "ts-morph": "^27.0.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "vite-plugin-solid": "^2.11.8",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.28.0"
}
